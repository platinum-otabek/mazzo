extends layout
block content

  form(action="/users/login", method="POST")
    .limiter
      .container-login100
        .wrap-login100.p-l-55.p-r-55.p-t-65.p-b-50
          form.login100-form.validate-form
            span.login100-form-title.p-b-33
              | Tizimga kirish
            .wrap-input100.validate-input(data-validate='Postda ism majburiy:Eshmat')
              input.input100(type='text',required name='name', placeholder='Ismingizni kiriting')
              span.focus-input100-1
              span.focus-input100-2
            .wrap-input100.rs1.validate-input(data-validate='Password is required')
              input.input100(type='password',required name='pass', placeholder='Parolingizni kiriting')
              span.focus-input100-1
              span.focus-input100-2
            .container-login100-form-btn.m-t-20
              button.login100-form-btn
                | Tizimga kirish
          
    