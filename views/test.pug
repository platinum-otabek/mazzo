section#portfolio-details.portfolio-details
    .container
        #myCarousel.carousel.slide(data-ride='carousel')
            // Indicators
            ol.carousel-indicators
                each imgs,index in collection.imgs
                    li.active(data-target='#myCarousel', data-slide-to= index)
                // Wrapper for slides
            .carousel-inner
                each imgs,index in collection.imgs
                    .item(class= (index == 0 ? "active" : ""))
                        img.img-fluid(src='' + imgs.url.replace("public", ""), alt='', style='width:100%;')
            // Left and right controls
            a.left.carousel-control(href='#myCarousel', data-slide='prev')
                span.glyphicon.glyphicon-chevron-left
                span.sr-only Previous
            a.right.carousel-control(href='#myCarousel', data-slide='next')
                span.glyphicon.glyphicon-chevron-right
                span.sr-only Next

            .portfolio-info
                h3= collection.name_en
                ul
                    li
                        strong Каталог
                        | : #{product.name_en}
                    li
                        strong Client
                        | : 100+
                    li
                        strong  date
                        | : 01 March, 2020
                    li
                        strong Nimadir qo`shamiz
                        | :
                        a(href='#') :)
        .portfolio-description
            h2 This is an example of portfolio detail
            p
                | #{collection.allItems_en}


