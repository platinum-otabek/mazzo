extends ../layout

block content
    header#header.fixed-top.d-flex.align-items-center
        .container.d-flex.align-items-center
            .logo.mr-auto
                h1.text-light
                    a(href='/ru') Mazzo
            nav.nav-menu.d-none.d-lg-block
                ul
                    li.active
                        a(href='/ru') Главное
                    li
                        a(href='/ru#about') О нас
                    li
                        a(href='/ru/katalog') Каталог


                    li
                        a(href='/ru#contact') Контакты
                    li
                        a(href='/en') ен
    main#main
        section#breadcrumbs.breadcrumbs
            .container
                .d-flex.justify-content-between.align-items-center
                    h2= collection.name_ru
                    ol
                        li
                            a(href='/') Главное
                        li
                            a(href='/ru/katalog')  Каталог
                        li
                            a(href='/ru/katalog/'+product._id)  #{product.name_ru}
        // End Breadcrumbs
        // ======= Portfolio Details Section =======
        section#portfolio-details.portfolio-details

            #carouselExampleInterval.carousel.slide(data-ride='carousel')
                .carousel-inner.col-sm-10.offset-sm-1
                    each imgs,index in collection.imgs
                        .carousel-item(class= (index ==0 ? "active":""))(data-interval='10000')
                            img.img-fluid(src=''+ imgs.url.replace("public",""), alt='', style='')

                a.carousel-control-prev(href='#carouselExampleInterval', role='button', data-slide='prev')
                    span.carousel-control-prev-icon(aria-hidden='true')
                    span.sr-only Previous
                a.carousel-control-next(href='#carouselExampleInterval', role='button', data-slide='next')
                    span.carousel-control-next-icon(aria-hidden='true')
                    span.sr-only Next

            .portfolio-description.col-sm-10.offset-sm-1
                h2.size Размеры
                p.collectionRow
                    | #{collection.allItems_ru}


    footer#footer
        .container
            h3 Mazzo
            p Наши социальные сети
            .social-links
                a.telegram(href='https://t.me/Mazzo_lux_postel')
                    i.bx.bxl-telegram
                a.facebook(href='https://www.facebook.com/Mazzo-112011266987526/')
                    i.bx.bxl-facebook
                a.instagram(href='https://www.instagram.com/invites/contact/?i=wzqzm57fyo3k&utm_content=cpi8om2')
                    i.bx.bxl-instagram
            .copyright
            | ©Авторское право
            strong
                span  Mazzo.
            | Все права защищены
    a.back-to-top(href='#')
        i.ri-arrow-up-line
