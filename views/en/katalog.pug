extends ../layout

block content
    header#header.fixed-top.d-flex.align-items-center
        .container.d-flex.align-items-center
            .logo.mr-auto
                h1.text-light
                    a(href='/en') Mazzo
            nav.nav-menu.d-none.d-lg-block
                ul
                    li.active
                        a(href='/en') Home
                    li
                        a(href='/en#about') About us
                    li
                        a(href='/en/katalog') Category


                    li
                        a(href='/en#contact') Contacts
                    li
                        a(href='/ru') rus
    main#main
        section.contact
            .container
                .product-area.section
                    .container
                        .row
                            .col-12
                                .product-info
                                    .nav-main
                                        // Tab Nav

                                        ul#myTab.nav.nav-tabs(role='tablist')
                                            each product in products
                                                li.nav-item
                                                    a.nav-link(class= (product.name_en == oneproduct ? "active":"") href='/en/katalog/'+ product._id, role='tab')= product.name_en

                                    #myTabContent.tab-content
                                        // Start Single Tab
                                        #man.tab-pane.fade.show.active(role='tabpanel')
                                            .tab-single
                                                .row
                                                    each collection in collections

                                                        .col-xl-3.col-lg-4.col-md-4.col-12
                                                            .single-product
                                                                .product-img
                                                                    a(href='/en/collection/'+ collection._id)
                                                                        img.default-img(src=''+ collection.imgs[0].url.replace("public",""), alt='#')
                                                                    .button-head
                                                                        .product-action
                                                                            a(data-toggle='modal', data-target='#exampleModal', title='Quick View', href='#')
                                                                                i.ti-eye
                                                                                span Quick Shop

                                                                            a(title='Compare', href='#')
                                                                                i.ti-bar-chart-alt
                                                                                span
                                                                                    | Add to
                                                                                    | Compare
                                                                        .product-action-2
                                                                            a(title='Add to cart', href='#') Add to cart
                                                                .product-content
                                                                    h3
                                                                         a(href='/en/collection/'+ collection._id)= collection.name_en
                                                                    .product-price
                                                                        span #{collection.price} сум
    footer#footer
        .container
            h3 Mazzo
            //p |Et aut eum quis fuga eos sunt ipsa nihil. Labore corporis magni eligendi fuga maxime saepe commodi placeat.
            .social-links
                a.telegram(href='https://t.me/Mazzo_lux_postel')
                    i.bx.bxl-telegram
                a.facebook(href='https://www.facebook.com/Mazzo-112011266987526/')
                    i.bx.bxl-facebook
                a.instagram(href='https://www.instagram.com/invites/contact/?i=wzqzm57fyo3k&utm_content=cpi8om2')
                    i.bx.bxl-instagram
            .copyright
            | ©Copyright
            strong
                span Mazzo
            | .All Rights Reserved
    a.back-to-top(href='#')
        i.ri-arrow-up-line