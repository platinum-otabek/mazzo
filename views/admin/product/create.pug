extends ../layout 
block content
    .container
        h1 Product
        form(action='/admin/product/create' method= 'POST')
            .form-group
                label.control-label.col-sm-4(for='nameen') Material nomi_en(Каталог номи):
                .col-sm-8
                    input#nameen.form-control(type='text',required name='en' placeholder='material nomini(uz) kiriting')
            .form-group
                label.control-label.col-sm-4(for='nameru') Material nomi_ru(Каталог номи):
                .col-sm-8
                    input#nameru.form-control(type='text',required name='ru' placeholder='material nomini(ru) kiriting')
