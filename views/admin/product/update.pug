extends ../../layout 
block content
    .container
        h1 Material update
        form(action='/admin/product/update/'+product._id method= 'POST')
            .form-group
                label.control-label.col-sm-4(for='nameen') Material nomi en(Каталог номи):
                .col-sm-8
                    input#nameen.form-control(type='text',required name='en' value= product.name_en placeholder='material nomini_en kiriting')
            .form-group
                label.control-label.col-sm-4(for='nameru') Material nomi ru(Каталог номи):
                .col-sm-8
                    input#nameru.form-control(type='text',required name='ru' value= product.name_ru placeholder='material nomini_ru kiriting')

            input(type="hidden" name='token' value= token)
            .form-group
                .col-sm-offset-2.col-sm-10
                    button.btn.btn-primary(type='submit') Kiritish    